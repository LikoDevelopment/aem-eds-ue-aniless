{
  "name": "@adobe/aem-boilerplate",
  "private": true,
  "version": "1.3.0",
  "description": "Demo project to showcase AEM based EDS",
  "scripts": {
    "start:scss": "npm run watch:scss",
    "start:aem": "aem up",
    "start": "concurrently \"npm run start:aem\" \"npm run start:scss\"",
    "lint:js": "eslint . --ext .json,.js",
    "lint:css": "stylelint blocks/**/*.css styles/*.css",
    "lint": "npm run lint:js && npm run lint:css",
    "build:json": "npm-run-all -p build:json:models build:json:definitions build:json:filters",
    "build:json:models": "merge-json-cli -i \"models/_component-models.json\" -o \"component-models.json\"",
    "build:json:definitions": "merge-json-cli -i \"models/_component-definition.json\" -o \"component-definition.json\"",
    "build:json:filters": "merge-json-cli -i \"models/_component-filters.json\" -o \"component-filters.json\"",
    "prepare": "husky",
    "build:scss": "sass blocks:blocks --no-source-map --style=compressed",
    "watch:scss": "chokidar 'blocks/**/*.scss' -c 'npm run build:scss'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LikoDevelopment/aem-eds-ue-aniless.git"
  },
  "author": "Adobe",
  "license": "Apache License 2.0",
  "bugs": {
    "url": "https://github.com/LikoDevelopment/aem-eds-ue-aniless/issues"
  },
  "homepage": "https://github.com/LikoDevelopment/aem-eds-ue-aniless#readme",
  "devDependencies": {
    "@babel/eslint-parser": "7.25.9",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^9.1.0",
    "eslint": "8.57.1",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-plugin-import": "2.31.0",
    "eslint-plugin-json": "3.1.0",
    "eslint-plugin-xwalk": "github:adobe-rnd/eslint-plugin-xwalk#v0.1.0",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "merge-json-cli": "1.0.4",
    "npm-run-all": "^4.1.5",
    "sass": "^1.83.0",
    "stylelint": "16.6.1",
    "stylelint-config-standard": "36.0.1",
    "stylelint-selector-bem-pattern": "^4.0.0"
  },
  "lint-staged": {
    "*.js": [
      "npm run lint:js",
      "git add"
    ],
    "*.css": [
      "npm run lint:css",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
